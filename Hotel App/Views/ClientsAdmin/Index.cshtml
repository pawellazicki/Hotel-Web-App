@model IEnumerable<Hotel_App.Models.Clients>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hotel Guests</h2>

<p>
    @Html.ActionLink("Add Guest", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.client_first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_last_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_phone_number)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.client_first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_phone_number)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.client_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.client_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.client_id })
            </td>
        </tr>
    }

</table>
