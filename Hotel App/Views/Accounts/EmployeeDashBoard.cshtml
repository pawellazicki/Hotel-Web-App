@model IEnumerable<Hotel_App.Models.Room_reservation>

@{
    ViewBag.Title = "EmployeeDashBoard";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>Employee</h2>

<p>
    This is employee dashboard, here you can manage guests
    <hr/>
</p>

<p>
    Last reservations
</p>
<table class="table">
    <tr>
        <th>
            Client
        </th>
        <th>
            Room number
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clients.client_first_name)
                @Html.DisplayFor(modelItem => item.Clients.client_last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms.room_number)
            </td>
        </tr>
    }

</table>